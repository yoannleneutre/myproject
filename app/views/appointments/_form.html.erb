<%= form_for(@appointment) do |f| %>
  <% if @appointment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
      <% @appointment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
  <p> You are going to make an appointment as <b><%= @current_patient.name %></b> </p>  

   <div class="field">
    <%= f.label :doctor_id %><br />
    <%= f.collection_select :doctor_id, Doctor.all, :id, :name %>
   </div> 
   <div class="field">
    <%= f.label :time %><br />
    <%= f.datetime_select :time, :minute_step => 20, start_year: Date.today.year, :hour_start => 9 %>
  </div>
  <div class="field">
    <%= f.label :reason %><br />
    <%= f.text_field :reason %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
